{
    "name": "izBurst_flat",
    "parameters": {
        "a": "0.02",
        "b": "0.2",
        "c": "-50.0",
        "d": "2.0",
        "thresh": "0.03",
        "v0": "-0.07",
        "MSEC": "0.001",
        "MVOLT": "0.001"
    },
    "state": {
        "v": "v0",
        "U": "(v0 * (b / MVOLT))"
    },
    "state_functions": {
        "ISyn": "10"
    },
    "dynamics": {
        "v": "((((0.04 * ((v ^ 2) / MVOLT)) + (5 * v)) + (((140.0 - U) + ISyn) * MVOLT)) / MSEC)",
        "U": "(a * (((b * (v / MVOLT)) - U) / MSEC))"
    },
    "events": [
        {
            "name": "spike",
            "condition": "v - (thresh)",
            "direction": "+",
            "effect": {
                "state": {
                    "v": "c * MVOLT",
                    "U": "U + d"
                }
            }
        }
    ],
    "comment": "this file has been hand tuned as an example!!",
    "dt": "5.0E-6",
    "t_start": "0",
    "t_end": "0.2",

    "timeseries": [
	"v",
        "U"
    ],
    "dump_to_file": "izhikevich_sim.dat",
    "display": [
        {
            "name": "graph1: v and U timeseries",
            "ordinate_axis": {
                "label": "",
                "min": "-8",
                "max": "2"
            },
	    "abcissa_axis": {
                "label": "time(ms)",
                "min": "0",
                "max": "0.2"
            },
            "curves": [
                {
                    "name": "v timeseries",
                    "abcissa": "t",
                    "ordinate": "v",
                    "colour": "0xff0000"
                },
                {
                    "name": "U timeseries",
                    "abcissa": "t",
                    "ordinate": "U",
                    "colour": "0x0000ff"
                }
            ]
        },
        {
            "name":"graph2: state space",
            "abcissa_axis": {
                "label": "v(mV)",
                "min": "-0.08",
                "max": "0.04"
            },
            "ordinate_axis": {
                "label": "U",
                "min": "-8",
                "max": "2"
            },
            "curves": [
                {
                    "name": "(v, U) space",
                    "abcissa": "v",
                    "ordinate": "U",
                    "colour": "0x222222"
                }
            ]
        }
    ]
}
